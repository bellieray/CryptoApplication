<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/home_nav_graph">


    <action
        android:id="@+id/action_global_to_home"
        app:destination="@id/home_nav_graph"
        app:popUpTo="@navigation/login_graph"
        app:popUpToInclusive="true" />

    <action
        android:id="@+id/action_global_to_login"
        app:destination="@id/login_graph" />
    <include app:graph="@navigation/home_nav_graph" />
    <include app:graph="@navigation/detail_nav_graph" />
    <include app:graph="@navigation/login_graph" />
    <include app:graph="@navigation/favorite_nav_graph" />

</navigation>